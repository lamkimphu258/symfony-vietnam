{% extends 'base.html.twig' %}

{% block title %}Lesson Result{% endblock %}

{% block body %}
    <div class="header text-center">
        <h1>
            {% if (totalCorrectAnswer == totalAnswer) %}
                Chúc mừng bạn đã xuất sắc hoàn thành bài học
            {% endif %}
        </h1>
        <h1>
            Số câu đúng: {{ totalCorrectAnswer }}/{{ totalAnswer }}
        </h1>
    </div>
    <div class="d-flex justify-content-center mt-5">
        <div class="me-3">
            <a href="{{ path('app_lesson_show', {'lessonSlug':lessonSlug, 'courseSlug': courseSlug}) }}"
               class="btn btn-primary">
                Learn Again
            </a>
        </div>
        <div>
            <a href="{{ path('app_course_show', {'courseSlug':courseSlug}) }}" class="btn btn-primary mx-auto">
                Back to lesson list
            </a>
        </div>
    </div>
{% endblock %}
