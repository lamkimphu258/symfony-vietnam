{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="text-start">
        {% for index, enrollCourse in enrollCourses %}
            <p>
                {{ index+1 }}.
                <span>
                    <a href="">
                        {{ enrollCourse.course.name }}
                    </a>
                    {% if enrollCourse.finishedAt is not null %}
                        <i class="fas fa-check-square ms-2"></i>
                    {% endif %}
                </span>
            </p>
        {% endfor %}
    </div>
{% endblock %}
